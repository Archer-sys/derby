@import "../base";

body {
  background: #333;
}

#lightbox {
  position: relative;
  height: 300px;
  width: 300px;
  margin: 0 auto;
}

#lightbox > div {
  position: absolute;
  height: 300px;
  width: 300px;
  top: 0;
  left: 0;
  display: -webkit-box;
  display: -moz-box;
  display: box;
  box-orient: horizontal;
  box-pack: center;
  box-align: center;
}
#lightbox img {
  transition: opacity .5s ease-in-out;
  border-radius: 12px;
  box-shadow: 0 1px 1px #222, 0 2px 16px #222;
}

#alert {
  position: absolute;
  text-align: center;
  top: 0;
  left: 0;
  width: 100%;
  height: 0;
  z-index: 99;
}
#alert > p {
  background: #fff1a8;
  border: 1px solid #999;
  border-top: 0;
  border-radius: 0 0 3px 3px;
  display: inline-block;
  line-height: 21px;
  padding: 0 12px;
}
